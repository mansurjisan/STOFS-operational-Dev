export HOMEstofs=/lfs/h1/nos/estofs/noscrub/mansur.jisan/packages/IT-stofs.v1.1.0/

# Verify HOMEstofs path
export HOMEstofs=/lfs/h1/nos/estofs/noscrub/mansur.jisan/packages/IT-stofs.v1.1.0/
