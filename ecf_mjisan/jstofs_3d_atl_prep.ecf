# Check PREP script
if [ ! -x "${HOMEstofs}/jobs/${RUN}/JSTOFS_3D_ATL_PREP" ]; then
    echo "ERROR: JSTOFS_3D_ATL_PREP not found or not executable"
    ls -l "${HOMEstofs}/jobs/${RUN}/JSTOFS_3D_ATL_PREP" 2>&1
    exit 1
fi



${HOMEstofs}/jobs/JSTOFS_3D_ATL_PREP


